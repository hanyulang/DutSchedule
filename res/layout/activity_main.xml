                    android:layout_weight="1"
                    android:background="@drawable/week5"
                    android:gravity="center" />
                
                <TextView
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/text6"
                    android:layout_width="30dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
