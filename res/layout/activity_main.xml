                    android:gravity="center" />
                
                <TextView
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/text7"
                    android:layout_width="30dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/week7"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liner1"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_below="@id/linearLayout1"
                android:background="#ffffff"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/cursor"
                    android:layout_width="fill_parent"
                    android:layout_height="7dp"
                    android:scaleType="matrix"
                    android:src="@drawable/cursor" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_below="@id/liner1"
                android:scaleType="fitXY"
                android:src="@drawable/cursorbase" />

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/imageView1" >

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/cla1"
                        android:layout_width="match_parent"
                        android:layout_height="86dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:alpha="100"
                        android:background="@drawable/class1" >

                        <TextView
                            android:id="@+id/tv11"
                            android:layout_width="200dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:text="课名"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv12"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tv11"
                            android:layout_below="@+id/tv11"
                            android:layout_marginTop="0dp"
                            android:text="地点，周次"
                            android:textColor="#696969" />

                        <TextView
                            android:id="@+id/TextViewz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="false"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="25dp"
                            android:text="第一大节"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cla2"
                        android:layout_width="match_parent"
                        android:layout_height="86dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/class2" >

                        <TextView
                            android:id="@+id/tv22"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tv21"
                            android:layout_below="@+id/tv21"
                            android:text="地点，周次"
                            android:textColor="#696969" />

                        <TextView
                            android:id="@+id/tv21"
                            android:layout_width="200dp"
                            android:layout_height="26dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:text="课名"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/TextViewz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="false"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="25dp"
                            android:text="第二大节"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cla3"
                        android:layout_width="match_parent"
                        android:layout_height="86dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/class3" >

                        <TextView
                            android:id="@+id/tv32"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tv31"
                            android:layout_below="@+id/tv31"
